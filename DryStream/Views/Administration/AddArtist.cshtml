@model IEnumerable<DryStream.Models.Artist>

@{
    ViewBag.Title = "Artyści";
}

<h1>Artyści</h1>
<div class="row">
    <div class="col-md-6">
        <h3>Dodaj Artystę:</h3>
        
        <form action="AddArtist"  enctype="multipart/form-data" method="post" >
            <h4>
                <label for="name">Wpisz nazwę artysty: </label>
               
                <input type="text" name="Name" id="Name" class="form-control"/>
                <br />
                <label for="file">Dodaj okładkę: </label>
                <br /> 
                <input multiple="multiple" type="file" name="file" id="file"  />
                <br />
                <input type="submit" runat="server" class="btn btn-primary" value="Dodaj" />
            </h4>
            </form>

       
</div>
    <div class="col-md-6">
        <h3>Obecni Artyści: </h3>
        <ul>  
            @foreach (var item in Model)
            {    
             <li>
                <h4>@item.Name</h4><br/>
                <img src="@item.CoverLink" class="img-responsive" alt="Cinque Terre" />
                 <br/>
                
               
            </li>

            }
        </ul>
    </div>
</div>

