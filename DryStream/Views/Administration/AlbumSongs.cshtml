@model IEnumerable< DryStream.Models.Song>

@{
    ViewBag.Title = "Utwory";
}


@if (Model.Count()<1)
{
    <h1>Brak utworów dla podanego Albumu</h1>
}
else
{
    <div class="row">
        <div class="col-md-6">

            <h1>[@Model.First().Album.Artist.Name - @Model.First().Album.Title]</h1>
            <h2>Gatunek: @Model.First().Genre.NAME</h2>


            <br />
            <img src="@Model.First().Album.CoverLink" width="300" height="300" class="img-responsive" alt="Cinque Terre" />

        </div>
        <div class="col-md-6">
            <h2>Utwory:</h2>
            <table class="table">
                <tr>
                    <th>
                        <h4> #</h4>

                    </th>
                    <th>
                        <h4>Tytuł</h4>
                    </th>
                    <th>
                        <h4>Czas</h4>
                    </th>
                </tr>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>
                            <h4>@Html.DisplayFor(m => item.AlbumPosition).</h4>
                        </td>
                        <td>
                            <h4>@Html.DisplayFor(m => item.Name)</h4>
                        </td>
                        <td>
                            <h4>@item.Duration.Minutes:@item.Duration.Seconds </h4>
                        </td>
                        <td>
                            <h4>@Html.ActionLink("Usuń", "deleteSong", new { id = item.SongID }) </h4>
                        </td>
                    </tr>
                }
            </table>
        </div>

    </div>
}





