@model DryStream.Models.SongsAlbumsArtistsModel

@{
    ViewBag.Title = "Utwory";
}

<h1>Piosenki</h1>
<div class="row">
    <div class="col-md-6">
        <h3>Dodaj utwór:</h3>
        <form action="AddSong" class="form-horizontal" enctype="multipart/form-data" method="post">
            <div class="form-group">
                <h4><label for="Title" class="col-xs-3 control-label">Tytuł:</label></h4>
                <div class="col-xs-5">
                    <input type="text" class="form-control" name="Name" />
                </div>
            </div>
            <div class="form-group">
                <h4><label for="AlbumPosition" class="col-xs-3 control-label">Pozycja:</label></h4>
                <div class="col-xs-5">
                    <input type="number" min="1" max="30" class="form-control" name="AlbumPosition" />
                </div>
            </div>

            <div class="form-group">
                <h4><label class="col-xs-3 control-label">Gatunek:</label></h4>
                <div class="col-xs-5 selectContainer">
                    <select class="form-control" name="genreID">
                        <option value="">Wybierz...</option>
                        @foreach (var item in Model.Genres)
                        {
                            <option value="@item.GenreID">@item.NAME</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <h4><label class="col-xs-3 control-label">Album:</label></h4>
                <div class="col-xs-5 selectContainer">
                    <select class="form-control" name="albumID">
                        <option value="">Wybierz...</option>
                        @foreach (var item in Model.Albums)
                        {
                            {
                                <option value="@item.AlbumID">@item.Artist.Name - @item.Title</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <h4><label class="col-xs-3 control-label">Utwór: </label></h4>
                <input multiple="multiple" class="btn btn-file" accept=".mp3" type="file" name="file" id="file" />
            </div>

            <div class="col-xs-3 control-label">
                <input type="submit" runat="server" class="btn btn-primary" value="Dodaj Utwór" />
            </div>
        </form>
    </div>

</div>
